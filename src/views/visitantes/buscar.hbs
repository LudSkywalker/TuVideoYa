{{#each vid}}
	<div class="card" style=" min-width: 19rem; margin: 4%;">
		<div class="card-body text-center">
			<div class="row" style="max-width: 100%; ">
				<div style="width: 17 rem; min-width: 50%;" class="col">
					<iframe
						width="100%"
						height="100% rem"
						src="{{vidLink}}"
						frameborder="0"
						allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
						allowfullscreen
					></iframe>
				</div>
				<div class="col">
					<h2>{{vidNombre}}</h2>
					<br />
					<a href="/videosTipo/{{tvidId}}" style="color:#0b0320;">
						<u>
							<h5>{{tvidNombre}}</h5>
						</u>
					</a>
					<br />
					<h4>{{vidDescripcion}}</h4>
					<br />
					<a href="/video/{{vidId}}">
						<button class="btn-danger btn-block">
							Ver mas informacion sobre el video</button>
					</a>
				</div>
			</div>
		</div>
	</div>
{{else}}
	<div class="card" style=" min-width: 19rem; margin: 4%;">
		<div class="card-body text-center">
			<div class="row" style="max-width: 100%; ">
				<div class="col">
					<h2>Aun no se han posteado ningun video con la palabra: "{{keyword}}"</h2>
				</div>
			</div>
		</div>
	</div>
{{/each}}