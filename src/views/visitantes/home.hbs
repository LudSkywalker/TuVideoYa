{{>carrousel}}
<div style="padding-top: 1%;">
    <div class="col-sm-12 text-center">
        <div class="card-group" style="padding-left: 4%;padding-right: 4%;">
            {{#each tipoVideo}}
            <div class="card" id="bogr">
                <div class="card-header" id="bog">

                    {{!-- <img style="width: 4.5rem; height: 4.5rem;"
                        src="https://paginasparacolorear.com/image/objetos/drawing-camara-de-video-8.png" alt=""> --}}
                </div>
                <div class="card-body" id="titl">
                    <a href="/search/{{tvidId}}">
                        {{tvidNombre}}
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
        {{#each videos }}
        <div class="card" style=" min-width: 19rem; margin: 4%;">
            <div class="card-body text-center" >
                <div class="row" style="max-width: 100%; ">
                    <div style="width: 17 rem; min-width: 50%;"  class="col">
                        <iframe width="100%" height="100% rem" src="{{vidLink}}" frameborder="0"
                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                    </div>
                    <div class="col">
                        <h2>{{vidNombre}}</h2>
                        <br>
                        <h4>{{vidDescripcion}}</h4>
                        <br>
                        <a href="/video/{{vidId}}" >
                           <button class="btn-danger btn-block"> Ver mas informacion sobre el video</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{/each }}

    </div>
</div>