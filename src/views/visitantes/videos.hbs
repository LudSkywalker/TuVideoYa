<div class="card" style=" min-width: 19rem; margin: 4%;">
    <div class="card-body text-center">
        <div class="row" style="max-width: 100%;  height: 100%;">
            <div style="width: 17 rem; min-width: 50%; " class="col">
                <iframe width="100%" height="100%" src="{{video.vidLink}}" frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
            <div class="col" style="min-height: 16rem; ">
                <h2>{{video.vidNombre}}</h2>
                <br>
                <h4>{{video.vidDescripcion}}</h4>
                <br>
            </div>
        </div>
        <div style="margin-top: 1%;">
            <div class="card">
                <div class="card-body">
                    {{#each chat}}
                    {{#if chatPregunta}}
                    <div style="text-align: right;">
                        <button type="button" class="btn btn-outline-danger">
                            <h6>{{chatMensaje}}</h6>
                        </button>
                    </div>
                    <br>
                    {{else}}
                    <div style="text-align: left;">
                        <button type="button" class="btn btn-outline-danger">
                            <h6>Hola como estas</h6>
                        </button>
                    </div>
                    <br>
                    {{/if}}
                    {{/each}}
                </div>
            </div>

            <div class="custom-file">
                <form class="form-inline" method="POST" action="/chat">
                    <input class="form-control" type="text" placeholder="Escriba aqui" style="width: 70%;" name="mensaje"
                        id="busc" autocomplete="off" required>
                    <input type="hidden" value=" {{{video.vidId}}}" name="vidId">
                    <input type="hidden" value=" {{{video.proveedores_prosId}}}" name="proos">
                    <button class="btn btn-danger" type="submit" style="width: 30%;">
                        Enviar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>