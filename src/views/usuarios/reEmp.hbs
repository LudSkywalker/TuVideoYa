<div class="row" style="padding-top: 1%;text-align: center; width: 100%;">
  <div class="col" style="max-width: 10%;">
  </div>
  <div class="col" style="width: 80%; min-width: 19rem;">
    <h3>
      Registrate como
      <br>
      empresa
    </h3>
    <h5>
      Ofrece tus servicios a nuestra comunidad
    </h5>
    <div class="card text-center">
      <form action="/registro/empresa" method="POST">
        <div class="row" style="padding-right: 2%;padding-left: 2%; padding-top: 2%; padding-bottom: 2%; ">
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Nombre de la empresa</h5>
            <input type="text" class="form-control" name="marca" autofocus required>
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Matricula de la empresa</h5>
            <input type="text" class="form-control" name="matricula" required>
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Representante legal</h5>
            <input type="text" class="form-control" name="repre" required>
          </div>
        </div>
        <div class="row" style="padding-right: 2%;padding-left: 2%; padding-top: 2%; padding-bottom: 2%; ">
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Link imagen de la empresa</h5>
            <input type="url" class="form-control" name="img">
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Ciudad</h5>
            <input type="text" class="form-control" name="ciudad" required>
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Direcci√≥n de la empresa</h5>
            <input type="text" class="form-control" name="direccion" required>
          </div>
        </div>
        <div class="row" style="padding-right: 2%;padding-left: 2%; padding-top: 2%; padding-bottom: 2%; ">
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Numero Telefonico</h5>
            <input type="text" class="form-control" name="telefono" required>
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% " >
            <h5>Correo empresarial</h5>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Link pagina web</h5>
            <input type="url" class="form-control" name="web">
          </div>
        </div>
        <div style="padding-bottom: 2%; padding-left: 10%;padding-right: 10%;">
          <button type="submit" class="btn btn-danger btn-lg btn-block">
            Registrar empresa
          </button>
        </div>
      </form>
    </div>
  </div>
  <div class="col" style="max-width: 10%;">
  </div>
</div>