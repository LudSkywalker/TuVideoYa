<div class="row" style="padding-top: 1%;text-align: center; width: 100%;">
  <div class="col" style="max-width: 10%;">
  </div>
  <div class="col" style="width: 80%; min-width: 19rem;">
    <h3>
      Registrate como
      <br>
      Freelancer
    </h3>
    <h5>
      Ofrece tus servicios a nuestra comunidad
    </h5>
    <div class="card text-center">
      <form action="/registro/freelancer" method="POST">
        <div class="row" style="padding-right: 2%;padding-left: 2%; padding-top: 2%; padding-bottom: 2%; ">
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Nombre completo</h5>
            <input type="text" value="{{usu.usuNombre}}" class="form-control" name="nombre" autofocus required>
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Correo electronico</h5>
            <input type="email" class="form-control" name="email" value="{{usu.usuEmail}}">
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Link de una foto</h5>
            <input type="url" class="form-control" name="img">
          </div>
        </div>
        <div class="row" style="padding-right: 2%;padding-left: 2%; padding-top: 2%; padding-bottom: 2%; ">
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Ciudad</h5>
            <input type="text" class="form-control" name="ciudad" required>
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Direcci√≥n personal</h5>
            <input type="text" class="form-control" name="direccion">
          </div>
          <div class="col" style="min-width: 13rem;padding-top: 1% ">
            <h5>Numero Telefonico</h5>
            <input type="text" class="form-control" name="telefono" required>
          </div>
        </div>
        <div class="row" style="padding-right: 2%;padding-left: 2%; padding-top: 2%; padding-bottom: 2%; ">
          <div class="col" style="min-width: 13rem;">
            <h5>Link pagina web</h5>
            <input type="url" class="form-control" name="web">
          </div>
          <div class="col" style="padding-top: 2%; min-width: 13rem;">
            <button type="submit" class="btn btn-danger btn-lg btn-block">
              Registrarme como Freelancer
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="col" style="max-width: 10%;">
  </div>
</div>